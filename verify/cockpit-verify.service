[Unit]
Description=Cockpit Verify
Requires=docker.service libvirtd.service
After=docker.service libvirtd.service

[Service]
Restart=always
RestartSec=60
Environment=TEST_OS=fedora-23
ExecStart=/bin/sh -xc "/usr/bin/docker run --name=verify-$TEST_OS --volume=/home/cockpit:/home/user:rw --volume=/opt/verify-$TEST_OS:/build:rw --net=host --pid=host --privileged --env=TEST_OS=$TEST_OS cockpit/infra-verify"
ExecStop=-/bin/sh -xc "/usr/bin/docker rm -f verify-$TEST_OS"

[Install]
WantedBy=multi-user.target
